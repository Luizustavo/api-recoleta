    "/waste/{id}/collect": {
      "post": {
        "description": "Marca o resíduo como \"em processo de coleta\" e cria uma solicitação de coleta",
        "operationId": "WasteController_requestCollection",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "ID único do resíduo a ser coletado",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "description": "Dados da solicitação de coleta (mensagem opcional)",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCollectionRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Solicitação de coleta criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Solicitação de coleta enviada com sucesso!"
                    }
                  }
                }
              }
            }
          },
          "400": {
