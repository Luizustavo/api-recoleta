    "/waste/available": {
      "get": {
        "description": "Retorna resíduos de outros usuários disponíveis para coleta. Aceita filtros por localização, tipo e distância.",
        "operationId": "WasteController_getAvailableWastes",
        "parameters": [
          {
            "name": "city",
            "required": false,
            "in": "query",
            "description": "Filtrar por cidade",
            "schema": {
              "example": "São Paulo",
              "type": "string"
            }
          },
          {
            "name": "state",
            "required": false,
            "in": "query",
            "description": "Filtrar por estado (UF)",
            "schema": {
              "example": "SP",
              "type": "string"
            }
          },
          {
            "name": "wasteType",
            "required": false,
            "in": "query",
            "description": "Filtrar por tipo de resíduo",
            "schema": {
              "enum": [
                "ELECTRONICS",
                "ORGANIC",
                "PLASTIC",
                "PAPER",
                "GLASS",
                "METAL",
                "WOOD",
                "TEXTILE",
                "MISCELLANEOUS"
              ],
              "type": "string"
            }
          },
          {
            "name": "maxDistance",
            "required": false,
            "in": "query",
            "description": "Distância máxima em KM (requer latitude/longitude)",
            "schema": {
              "example": 10,
              "type": "number"
            }
          },
          {
            "name": "latitude",
            "required": false,
            "in": "query",
            "description": "Latitude do usuário para cálculo de distância",
            "schema": {
              "example": -23.55052,
              "type": "number"
            }
          },
          {
            "name": "longitude",
            "required": false,
            "in": "query",
            "description": "Longitude do usuário para cálculo de distância",
            "schema": {
              "example": -46.633308,
              "type": "number"
            }
          },
          {
            "name": "page",
            "required": false,
            "in": "query",
            "description": "Página (paginação)",
            "schema": {
              "example": 1,
              "type": "number"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Itens por página",
            "schema": {
              "example": 10,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de resíduos disponíveis retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "wasteType": {
                        "type": "string"
                      },
                      "weight": {
                        "type": "number"
                      },
                      "quantity": {
                        "type": "number"
                      },
                      "condition": {
                        "type": "string"
                      },
                      "status": {
                        "type": "string",
                        "example": "AVAILABLE"
                      },
                      "distance": {
                        "type": "number",
                        "description": "Distância em KM (se coordenadas fornecidas)"
                      },
                      "user": {
                        "type": "object"
                      },
                      "address": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "JWT-auth": []
          }
        ],
        "summary": "Listar resíduos disponíveis para coleta",
        "tags": [
          "waste"
        ]
      }
    },
