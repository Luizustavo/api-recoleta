    "/waste": {
      "post": {
        "description": "Cria um novo cadastro de resíduo vinculado ao usuário autenticado. Aceita campos em português que são automaticamente convertidos.",
        "operationId": "WasteController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "description": "Dados do resíduo e endereço de descarte",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWasteDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Resíduo cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "userId": {
                      "type": "string"
                    },
                    "wasteType": {
                      "type": "string",
                      "enum": [
                        "ELECTRONICS",
                        "PLASTIC",
                        "etc"
                      ]
                    },
                    "weight": {
                      "type": "number"
                    },
                    "quantity": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "string",
                      "enum": [
                        "KG",
                        "LITERS",
                        "UNITS"
                      ]
                    },
                    "condition": {
                      "type": "string",
                      "enum": [
                        "NEW",
                        "USED",
                        "DAMAGED"
                      ]
                    },
                    "hasPackaging": {
                      "type": "boolean"
                    },
                    "discardDate": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "additionalDescription": {
                      "type": "string"
                    },
                    "images": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    },
                    "address": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token JWT inválido ou ausente"
          }
        },
        "security": [
          {
            "JWT-auth": []
          }
        ],
        "summary": "Cadastrar novo resíduo",
        "tags": [
          "waste"
        ]
      },
      "get": {
        "description": "Retorna todos os resíduos cadastrados pelo usuário autenticado",
